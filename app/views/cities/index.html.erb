<h1>Cities</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>State</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.state.name %></td>
        <td><%= city.name %></td>
        <td><%= link_to 'Show', city, class: 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_city_path(city), class: 'btn btn-dark' %></td>
        <td><%= link_to 'Destroy', city, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path, class: 'btn btn-dark' %>
