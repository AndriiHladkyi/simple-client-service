<h1>States</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Country</th>
      <th>State name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.country.name %></td>
        <td><%= state.name %></td>
        <td><%= link_to 'Show', state, class: 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_state_path(state), class: 'btn btn-dark' %></td>
        <td><%= link_to 'Destroy', state, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path, class: 'btn btn-dark' %>
