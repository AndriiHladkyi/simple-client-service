<h1>Clients</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.email %></td>
        <td><%= client.organization_name %></td>
        <td><%= link_to 'Show', client, class: 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_client_path(client), class: 'btn btn-dark' %></td>
        <td><%= link_to 'Destroy', client, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path, class: 'btn btn-dark' %>
