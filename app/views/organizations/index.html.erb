<h1>Organizations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tax id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.tax_id %></td>
        <td><%= link_to 'Show', organization, class: 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization), class: 'btn btn-dark' %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organization', new_organization_path, class: 'btn btn-dark' %>
