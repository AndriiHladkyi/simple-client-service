<p><b>Country: </b><%= @country.name %></p>
<% unless @country.states.empty? %>
  <p><b>States: </b></p>
  <% @country.states.map do |state| %>
    <p><%= state.name %></p>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_country_path(@country), class: 'btn btn-dark' %>
<%= link_to 'Back', countries_path, class: 'btn btn-dark' %>
