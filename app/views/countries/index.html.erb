<h1>Countries</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %>
        <td><%= link_to 'Show', country, class: 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_country_path(country), class: 'btn btn-dark' %></td>
        <td><%= link_to 'Destroy', country, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Country', new_country_path, class: 'btn btn-dark' %>
